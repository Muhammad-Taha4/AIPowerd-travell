generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  TRAVELLER
  AGENCY
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  passwordHash  String?
  role          UserRole
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  
  travellerProfile TravellerProfile?
  agencyProfile    AgencyProfile?
  sessions         Session[]
  accounts         Account[]
  bookings         Booking[]
  reviews          Review[]
  chatMessages     ChatMessage[]
}

model TravellerProfile {
  userId      String   @id
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fullName    String?
  preferences Json?    // { activities: string[], budgetRange: string, groupSize: number }
  wishlist    String[] // Array of Package IDs
}

model AgencyProfile {
  userId         String   @id
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  companyName    String?
  credentialsUrl String?
  rating         Float    @default(0)
  verified       Boolean  @default(false)
  
  packages       TourPackage[]
}

// NextAuth Models
model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Module 3: Tour Package Models (Adding now as requested)
model TourPackage {
  id                  String   @id @default(uuid())
  agencyId            String
  agency              AgencyProfile @relation(fields: [agencyId], references: [userId])
  title               String
  description         String
  price               Decimal  @db.Decimal(10, 2)
  durationDays        Int
  inclusions          Json     // { flights: boolean, hotels: boolean, meals: boolean, transport: boolean, guide: boolean }
  itinerary           Json     // [{ day: number, activity: string, description: string }]
  tags                String[] // e.g. ["Adventure", "Cultural"]
  availabilityCalendar Json    // { startDate: string, endDate: string, remainingSlots: number }[]
  images              PackageImage[]
  bookings            Booking[]
}

model PackageImage {
  id        String      @id @default(uuid())
  packageId String
  package   TourPackage @relation(fields: [packageId], references: [id], onDelete: Cascade)
  url       String
}

// Module 4: Trip Monitoring
model ActiveTrip {
  id        String   @id @default(uuid())
  bookingId String   @unique
  booking   Booking  @relation(fields: [bookingId], references: [id])
  status    String   // "ongoing", "completed"
  lastLat   Float?
  lastLng   Float?
  updates   Json?    // Array of status updates
}

model SOSEvent {
  id        String   @id @default(uuid())
  userId    String
  tripId    String?
  lat       Float
  lng       Float
  status    String   // "active", "resolved"
  createdAt DateTime @default(now())
}

// Module 6: Booking Models
model Booking {
  id           String      @id @default(uuid())
  travellerId  String
  traveller    User        @relation(fields: [travellerId], references: [id])
  packageId    String
  package      TourPackage @relation(fields: [packageId], references: [id])
  status       String      // "PENDING", "CONFIRMED", "CANCELLED"
  paymentId    String?     @unique
  totalPrice   Decimal     @db.Decimal(10, 2)
  bookingDate  DateTime    @default(now())
  
  activeTrip   ActiveTrip?
  review       Review?
}

// Module 7: Review Models
model Review {
  id          String   @id @default(uuid())
  bookingId   String   @unique
  booking     Booking  @relation(fields: [bookingId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  rating      Int
  comment     String
  photos      String[]
  createdAt   DateTime @default(now())
}

// Module 5 Chat
model ChatMessage {
  id        String   @id @default(uuid())
  senderId  String
  sender    User     @relation(fields: [senderId], references: [id])
  room      String   // room id, e.g. "trip-id" or "support-user-id"
  content   String
  isBot     Boolean  @default(false)
  createdAt DateTime @default(now())
}
